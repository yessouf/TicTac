<div class="home">

    <div class="row">

      <div class="col-12 text-center get_started">
      </div>

      <!-- SIGN UP AREA -->
      <div class="col-12 col-sm-6 text-center">

        <div class="formArea">
          <h4 class="titleForm">Sign Up</h4>

          <form action="/users/sign-up" method="POST">
            <div class="form-group">
              <label for="exampleInputUsername">name</label>
              <input name="usernameFromFront" type="text" class="form-control" placeholder="Enter name">
            </div>
            <div class="form-group">
                <label for="FirstName">FirstName</label>
                <input name="usernameFromFront" type="text" class="form-control" placeholder="Enter FirstName">
              </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Email</label>
              <input name="emailFromFront" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Password</label>
              <input name="passwordFromFront" type="password" class="form-control"  placeholder="Enter password">
            </div>

            <button type="submit" class="btn btn-danger">Submit</button>
          </form>
        </div>

      </div>

      <!-- SIGN IN AREA -->
      <div class="col-12 col-sm-6 text-center">

        <div class="formArea">

          <h4 class="titleForm">Sign In</h4>

          <form action="/users/sign-in" method="POST">
            <div class="form-group">
              <label for="exampleInputEmail1">Email address</label>
              <input name="emailFromFront" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Password</label>
              <input name="passwordFromFront" type="password" class="form-control" placeholder="Enter password">
            </div>

            <button type="submit" class="btn btn-danger">Submit</button>
          </form>

        </div>

      </div>

    </div>
